                    p
                        input#serviceNameRadioButton_ndfl(type="radio", name="service", value="Ndfl")
                        |НДФЛ
                    p
                        input#serviceNameRadioButton_fss(type="radio", name="service", value="Fss")
                        |ФСС
                    p
                        input#serviceNameRadioButton_pfr(type="radio", name="service", value="Pfr")
                        |ПФР
                    p
                        input#serviceNameRadioButton_kopf(type="radio", name="service", value="Kopf")
                        |КОПФ
                    p
                        input#serviceNameRadioButton_fms(type="radio", name="service", value="Fms")
                        |ФМС
                    p
                        input#serviceNameRadioButton_test(type="radio", name="service", value="Test")
